<Window x:Class="Barco.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Barco"
        mc:Ignorable="d"
        Title="LoginScreen" Height="450" Width="800">
    <Grid>
        <Image x:Name="imgLogin" HorizontalAlignment="Left" Height="79" Margin="21,12,0,0" VerticalAlignment="Top" Width="224" Source="/Views/logo.png"/>
        <Button x:Name="Login" Content="LOGIN" Command="{Binding LoginCommand}" HorizontalAlignment="Left" Margin="24,154,0,0" VerticalAlignment="Top" Height="40" Width="180" BorderBrush="#FFED0303" BorderThickness="4,1,1,1" Foreground="#FFED0303" FontWeight="Bold" OpacityMask="#FFFFFDFD" Background="White" RenderTransformOrigin="1.194,0.501"  FontSize="16"/>
        <Label Content="Welcome to BARCO" HorizontalAlignment="Left" Margin="432,222,0,0" VerticalAlignment="Top" Height="80" Width="306" FontSize="30" Foreground="#FFED0303" FontWeight="Bold"/>
        <Label Content="Have a nice day!" HorizontalAlignment="Left" Margin="549,271,0,0" VerticalAlignment="Top" Height="49" Width="190" FontSize="20" Foreground="#FFED0303"/>

    </Grid>
</Window>
